	public class Masking
	{
		//VARIABLES:_____________________________________________________________________________________________
		//----------------------------------------<VARIABLE MEMBERS>-------------------------------------------//
		
		//PRIVATE:
		
		//PUBLIC:
		
		//CONSTRUCTOR:___________________________________________________________________________________________
		//----------------------------------------<CONSTRUCTOR Method>-----------------------------------------//
		
		
		//PRIVATE:_______________________________________________________________________________________________
		//----------------------------------------<PRIVATE Methods>--------------------------------------------//
		
		
		//PUBLIC:________________________________________________________________________________________________
		//----------------------------------------<PUBLIC Methods>---------------------------------------------//
		public static function drawMask(width:Number, height:Number, color:uint=0x00FF00):Shape
		{
			var mask:Shape = new Shape();
			var gr:Graphics = mask.graphics;
			gr.beginFill(color);
			gr.drawRect(0, 0, width, height);
			gr.endFill();
			return mask;
		}
		//----------------------------------------<END>--------------------------------------------------------//
	}
}